<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_take_out_seller_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_take_out_seller_cover"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/item_take_out_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="韩式炸鸡"
                android:textColor="@color/gray_333"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/item_take_out_seller_cover"
                app:layout_constraintTop_toTopOf="@+id/item_take_out_seller_cover" />

            <LinearLayout
                android:id="@+id/linearLayout58"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/item_take_out_seller_name"
                app:layout_constraintTop_toBottomOf="@+id/item_take_out_seller_name">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/item_take_out_seller_name"
                    app:layout_constraintTop_toBottomOf="@+id/item_take_out_seller_name"
                    app:srcCompat="@mipmap/take_out_collect" />

                <TextView
                    android:id="@+id/item_take_out_seller_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="4.7"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_take_out_seller_sale_quantitiy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="月售 744"
                    android:textSize="11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_take_out_seller_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="40分钟"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/linearLayout58"
                app:layout_constraintTop_toTopOf="@+id/linearLayout58" />

            <TextView
                android:id="@+id/item_take_out_seller_avg_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="人均 40"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/linearLayout58"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout58" />

            <TextView
                android:id="@+id/item_take_out_seller_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_red_tag_bg"
                android:padding="2dp"
                android:text="各种披萨"
                android:textColor="#fb6e6e"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_take_out_seller_cover"
                app:layout_constraintStart_toStartOf="@+id/item_take_out_seller_avg_cost"
                app:layout_constraintTop_toBottomOf="@+id/item_take_out_seller_avg_cost"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>